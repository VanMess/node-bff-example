{
  "name": "node-bff-example",
  "version": "0.0.1",
  "description": "Example of BFF base node stacks.",
  "main": "src/bin/www.js",
  "scripts": {
    "dev": "NODE_ENV=development npx nodemon --exec babel-node src/bin/www",
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "lint": "eslint --ext .js src"
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=3.8"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bristol": "^0.4.0",
    "config": "^3.2.4",
    "core-js": "^3.4.5",
    "fs-extra": "^8.1.0",
    "http-status-codes": "^1.4.0",
    "jws": "^3.2.2",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "lodash": "^4.17.15",
    "palin": "^2.3.0",
    "pm2": "^4.2.0",
    "regenerator-runtime": "^0.13.3",
    "standard-error": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-watch": "^4.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.6",
    "smid": "^0.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint src --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "tecvan",
  "license": "ISC"
}
